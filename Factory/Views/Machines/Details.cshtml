@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Machine Details</h2>
<hr />
<h3>@Html.Display("Machine Name: "): @Html.DisplayFor(model => model.MachineName)</h3>
@if (@Model.JoinEntities.Count == 0)
{
  <p>This Machine has no Engineers</p>
}
else
{
  <h4>Engineers: </h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@Html.ActionLink($"{@join.Engineer.EngineerName}", "Details", "Engineers", new { id = join.Engineer.EngineerId }) | @Html.ActionLink("Remove", "RemoveEngineer", new { joinId = join.EngineerMachineId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add an Engineer", "AddEngineer", new { id = Model.MachineId })</p>

<p>@Html.ActionLink("Back to all machines", "Index")</p>
<p>@Html.ActionLink("Edit Machine", "Edit", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", new { id = Model.MachineId })</p>